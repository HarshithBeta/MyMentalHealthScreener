                    <% locals.allstudent.forEach(student => { %>
                        <tr>
                          <td>
                            <%= student.student_rollnbr %>
                          </td>
                          <td>
                            <%= student.student_name %>
                            </td>
                            <td>
                            <% let modifiedDate = ''; %>
                        <% let date %>
                            <% student.phq9.forEach(element => { %>
                              <% date = element.date.toLocaleString(); %>
                            <% }) %>
                            <%= date %>
                          </td>
                          <td>
                            <% let avg = 0; let leng = student.phq9.length; %>
                              <% student.phq9.forEach(element => {
                                avg += parseInt(element.score);
                              }); %>
                              <%= avg %>
                          </td>
                          <td>
                            <% avg = 0; leng = student.phq15.length; %>
                              <% student.phq15.forEach(element => {
                                avg += parseInt(element.score);
                              }); %>
                              <%= avg %>
                          </td>
                          <td>
                            <% avg = 0; leng = student.gad7.length; %>
                            <% student.gad7.forEach(element => {
                              avg += parseInt(element.score);
                            }); %>
                            <%= avg %>
                          </td>
                        </tr>
                      <% }); %>
                      
                </tbody>
            </table>
        </div>
